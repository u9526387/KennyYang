<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseInfo.FillRentInfo3">


    <TextView
        android:id="@+id/firstName28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="139dp"
        android:text="*可遷入日:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/firstName27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="237dp"
        android:text="*最短租期:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/firstName23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="207dp"
        android:text="*租金:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/spinner8"
        android:layout_width="91dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/firstName23"
        android:layout_marginLeft="-79dp"
        android:layout_marginStart="-79dp"

        android:layout_toEndOf="@+id/spinner7"
        android:layout_toRightOf="@+id/spinner7"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/firstName22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/firstName21"
        android:layout_toEndOf="@+id/ch_sofa"
        android:text="電梯:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/ch_sofa" />

    <TextView
        android:id="@+id/firstName25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/firstName22"
        android:layout_alignTop="@+id/firstName23"
        android:text="押金:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/firstName22" />

    <TextView
        android:id="@+id/firstName24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/firstName23"
        android:layout_toEndOf="@+id/ch_closet"
        android:text="元/月"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/ch_closet" />

    <TextView
        android:id="@+id/firstName21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        android:text="車位:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:id="@+id/ch_chair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/firstName16"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="椅子"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/ChooseIdentity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCDD2"
        android:gravity="center"
        android:text="房屋資料"
        android:textColor="#000000"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/firstName16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:text="*提供家具:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:id="@+id/ch_bed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstName16"
        android:text="床"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/ch_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/firstName16"
        android:layout_marginEnd="96dp"
        android:text="桌子"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="96dp" />

    <CheckBox
        android:id="@+id/ch_sofa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstName16"
        android:layout_marginStart="139dp"
        android:text="沙發"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="139dp" />

    <CheckBox
        android:id="@+id/ch_closet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstName16"
        android:layout_marginStart="62dp"
        android:text="衣櫃"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="62dp" />

    <Spinner
        android:id="@+id/spinnerShortRent"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/firstName27"
        android:layout_toEndOf="@+id/firstName16"
        android:layout_toRightOf="@+id/firstName16"
        android:entries="@array/rent_time" />

    <EditText
        android:id="@+id/editTextDeposit"
        android:layout_width="66dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/firstName23"
        android:layout_toEndOf="@+id/firstName22"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/firstName22" />

    <EditText
        android:id="@+id/editTextRent"
        android:layout_width="66dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/firstName23"
        android:layout_toEndOf="@+id/firstName23"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/firstName23" />

    <Button
        android:id="@+id/NextStep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:background="@drawable/lightgreencolorstyle"
        android:gravity="center"
        android:text="繼續填寫"
        android:textSize="30dp" />

    <RadioGroup
        android:id="@+id/RadioGroupCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_car_yes"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/firstName22"
            android:layout_alignEnd="@+id/firstName28"
            android:layout_alignRight="@+id/firstName28"
            android:text="是" />

        <RadioButton
            android:id="@+id/rd_car_no"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/firstName22"
            android:layout_toEndOf="@+id/firstName28"
            android:layout_toRightOf="@+id/firstName28"
            android:text="否" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/RadioGroupEleva"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_eleva_yes"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/firstName22"
            android:layout_toEndOf="@+id/firstName22"
            android:layout_toRightOf="@+id/firstName22"
            android:text="是" />

        <RadioButton
            android:id="@+id/rd_eleva_no"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/firstName22"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="否" />


    </RadioGroup>



    <Spinner
        android:id="@+id/spinnerDay"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/firstName28"
        android:entries="@array/spn_day"
        android:layout_alignParentRight="true" />

    <Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/ch_table"
        android:layout_alignTop="@+id/firstName28"
        android:entries="@array/spn_month"
        android:layout_alignLeft="@+id/ch_table" />

    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/firstName28"
        android:layout_toEndOf="@+id/firstName28"
        android:entries="@array/spn_year"
        android:layout_toRightOf="@+id/firstName28" />


</RelativeLayout>
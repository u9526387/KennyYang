<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TenantInfo"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/ChooseIdentity"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:background="#FFCDD2"
        android:gravity="center"
        android:text="房客註冊"
        android:textColor="#000000"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <Spinner
        android:id="@+id/spinnerDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/spinnerMonth"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/spinnerMonth"
        android:layout_toRightOf="@+id/spinnerMonth"
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/tvBrithday"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/spinnerYear"
        android:layout_toRightOf="@+id/spinnerYear"
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvBrithday"
        android:layout_toEndOf="@+id/tvBrithday"
        android:layout_toRightOf="@+id/tvBrithday"
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvBrithday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gender"
        android:text="生日:"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ChooseIdentity"
        android:text="性別:"
        android:textColor="#000000"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvBrithday"
        android:layout_toEndOf="@+id/tvBrithday"
        android:layout_toRightOf="@+id/tvBrithday"
        android:visibility="visible" />


</RelativeLayout>
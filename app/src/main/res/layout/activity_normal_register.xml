<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_register.NormalRegister">

    <TextView
        android:id="@+id/FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="175dp"
        android:text="密碼確認:"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="94dp"
        android:ems="10"
        android:hint="請輸入姓氏"
        android:inputType="textPersonName"
        android:layout_marginRight="38dp"
        android:layout_alignParentRight="true"
        android:maxLength="30"/>


    <TextView
        android:id="@+id/firstName7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="密碼:"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/firstName8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="186dp"
        android:text="手機號碼:"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/firstName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/etName"
        android:text="姓名:"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/ChooseIdentity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCDD2"
        android:gravity="center"
        android:text="帳號申請"
        android:textColor="#000000"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />


    <Button
        android:id="@+id/Confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/lightgreencolorstyle"
        android:text="完成註冊"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/firstName7"
        android:ems="10"
        android:hint="請輸入密碼"
        android:inputType="textPassword"
        android:layout_alignParentRight="true"
        android:maxLength="15"/>

    <EditText
        android:id="@+id/checkpassword"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/FirstName"
        android:ems="10"
        android:hint="密碼確認"
        android:inputType="textPassword"
        android:layout_alignParentRight="true"
        android:maxLength="15"/>

    <EditText
        android:id="@+id/etTextPhone"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/firstName8"
        android:layout_alignParentStart="true"
        android:digits="0123456789"
        android:hint="請輸入手機號碼"
        android:layout_weight="2"
        android:maxLength="10"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="131dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u9526.myapplication.rent_personalData">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="fill_parent"
            android:layout_height="500dp">

            <TextView
                android:id="@+id/ChooseIdentity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFCDD2"
                android:gravity="center"
                android:text="個人資料"
                android:textColor="#000000"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="500dp"
                android:layout_height="226dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="69dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="600dp"
                android:text="TextView" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1140dp"
                android:text="Button" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1500dp"
                android:text="TextView" />

        </RelativeLayout>
    </ScrollView>


    <Button
        android:id="@+id/homepage"
        android:layout_width="88dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#03DAC6"
        android:text="首頁"
        android:textSize="16dp"
        android:onClick="jumpTorent_homepage"/>

    <Button
        android:id="@+id/collection"
        android:layout_width="88dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/homepage"
        android:layout_toRightOf="@+id/homepage"
        android:backgroundTint="#03DAC6"
        android:text="我的收藏"
        android:textSize="16dp"
        android:onClick="jumpTorent_collection"/>

    <Button
        android:id="@+id/message"
        android:layout_width="88dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/homepage"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/collection"
        android:layout_toRightOf="@+id/collection"
        android:backgroundTint="#03DAC6"
        android:text="互動訊息"
        android:textSize="16dp"
        android:onClick="jumpTorent_message"/>

    <Button
        android:id="@+id/personalData"
        android:layout_width="88dp"
        android:layout_height="96dp"
        android:layout_alignBottom="@+id/message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="#03DAC6"
        android:text="個人資料"
        android:textSize="26dp" />


</RelativeLayout>

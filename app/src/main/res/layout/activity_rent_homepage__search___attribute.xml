<?xml version="1.0" encoding="utf-8"?>





<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u9526.myapplication.Rent.rent_homepage__search___attribute">


        <TextView
            android:id="@+id/ChooseIdentity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCDD2"
            android:gravity="center"
            android:text="依屬性搜尋"
            android:textColor="#000000"
            android:textSize="44sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />



        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ChooseIdentity"
            android:text="租金" />



        <Spinner
        android:id="@+id/spinnerMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/money"/>





        <TextView
        android:id="@+id/floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerMoney"
        android:text="樓層" />
        <Spinner
        android:id="@+id/spinnerFloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floor"/>



        <TextView
        android:id="@+id/pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerFloor"
        android:text="寵物" />

        <Spinner
        android:id="@+id/spinnerPet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pet" />

        <TextView
        android:id="@+id/cup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerPet"
        android:text="罩杯大小" />
        <Spinner
        android:id="@+id/spinnerCup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cup" />

        <TextView
        android:id="@+id/smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerCup"
        android:text="有無抽煙" />
        <Spinner
        android:id="@+id/spinnerSmoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/smoke" />


        <TextView
        android:id="@+id/family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerSmoke"
        android:text="有無家屬" />
        <Spinner
        android:id="@+id/spinnerFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/family" />




        <TextView
        android:id="@+id/shower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerFamily"
        android:text="獨立浴室" />
        <Spinner
        android:id="@+id/spinnerShower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/shower" />




        <TextView
        android:id="@+id/carseat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerShower"
        android:text="車位" />
        <Spinner
        android:id="@+id/spinnerCarseat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/carseat" />




        <TextView
        android:id="@+id/elevator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerCarseat"
        android:text="獨立浴室" />
        <Spinner
        android:id="@+id/spinnerElevator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/elevator" />




    <TextView
        android:id="@+id/facility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerElevator"
        android:text="設施" />

    <CheckBox
        android:id="@+id/checkTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/facility"
        android:textSize="18dp"
        android:text="洗衣機" />

    <CheckBox
        android:id="@+id/checkRefrig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkTV"
        android:layout_toEndOf="@+id/checkTV"
        android:layout_toRightOf="@+id/checkTV"
        android:textSize="18dp"
        android:text="冰箱" />

    <CheckBox
        android:id="@+id/checkAir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkRefrig"
        android:layout_alignBottom="@+id/checkRefrig"
        android:layout_toEndOf="@+id/checkRefrig"
        android:layout_toRightOf="@+id/checkRefrig"
        android:text="電視"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkAir"
        android:layout_alignBottom="@+id/checkAir"
        android:layout_toEndOf="@+id/checkAir"
        android:layout_toRightOf="@+id/checkAir"
        android:text="冷氣"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/checkNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkTV"
        android:textSize="18dp"
        android:text="熱水器" />

    <CheckBox
        android:id="@+id/checkWash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkRefrig"
        android:layout_toEndOf="@+id/checkTV"
        android:layout_toRightOf="@+id/checkTV"
        android:text="網路"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/checkFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkWash"
        android:layout_alignBottom="@+id/checkWash"
        android:layout_toEndOf="@+id/checkRefrig"
        android:layout_toRightOf="@+id/checkRefrig"
        android:text="第四台"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/checkGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkFour"
        android:layout_alignBottom="@+id/checkFour"
        android:layout_toEndOf="@+id/checkFour"
        android:layout_toRightOf="@+id/checkFour"
        android:text="天然瓦斯"
        android:textSize="18dp" />








</RelativeLayout>

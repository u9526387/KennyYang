<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterLandlord.LandlordRegister">

    <EditText
        android:id="@+id/editText11"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/firstName9"
        android:ems="10"
        android:hint="請再次輸入密碼"
        android:inputType="textPassword"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/firstName9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="密碼確認:"
        android:textColor="#000000"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/LandlordName"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/firstName3"
        android:layout_toEndOf="@+id/firstName2"
        android:ems="10"
        android:hint="請輸入姓名"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/firstName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="173dp"
        android:text="密碼:"
        android:textColor="#000000"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/firstName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LandlordPhone"
        android:layout_alignParentStart="true"
        android:text="手機號碼:"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/firstName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:text="姓名:"
        android:textColor="#000000"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/LandlordPhone"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:hint="請輸入手機號碼"
        android:inputType="phone" />

    <EditText
        android:id="@+id/LandlordPassword"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/firstName2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="請輸入密碼"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/FinishRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:background="@drawable/lightgreencolorstyle"
        android:gravity="center"
        android:onClick="jumpTolandlord_info"
        android:text="下一步"
        android:textSize="30dp" />

</RelativeLayout>
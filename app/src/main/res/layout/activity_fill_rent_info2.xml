<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseInfo.FillRentInfo2">

    <CheckBox
        android:id="@+id/checkFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkTV"

        android:text="第四台"
        android:textSize="18dp"
       />

    <CheckBox
        android:id="@+id/checkGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checkFour"
        android:text="天然瓦斯"
        android:textSize="18dp"
        android:layout_alignParentRight="true" />

    <CheckBox
        android:id="@+id/checkRefrig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/firstName20"
        android:layout_marginTop="-145dp"
        android:text="冰箱"
        android:textSize="18dp"
        />

    <CheckBox
        android:id="@+id/checkAir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkFour"
        android:layout_alignStart="@+id/checkNet"
        android:text="冷氣"
        android:textSize="18dp"
        android:layout_alignLeft="@+id/checkNet" />

    <CheckBox
        android:id="@+id/checkHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignTop="@+id/checkFour"
        android:text="熱水器"
        android:textSize="18dp"
        android:layout_alignRight="@+id/textView7" />

    <CheckBox
        android:id="@+id/checkNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/checkFour"
        android:layout_marginStart="102dp"
        android:text="網路"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="102dp" />

    <CheckBox
        android:id="@+id/checkWash"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkFour"
        android:layout_marginStart="-104dp"
        android:layout_toEndOf="@+id/editTextBalcony"
        android:text="洗衣機"
        android:textSize="18dp"
        android:layout_marginLeft="-104dp"
        android:layout_toRightOf="@+id/editTextBalcony" />

    <TextView
        android:id="@+id/firstName20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="145dp"
        android:text="提供設備:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />


    <EditText

        android:id="@+id/editTextPing"
        android:layout_width="53dp"

        android:layout_height="wrap_content"

        android:layout_marginTop="280dp"
        android:layout_marginLeft="110dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/firstName19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="188dp"
        android:text="房屋坪數:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/editTextLivingRoom"
        android:layout_width="53dp"
        android:layout_height="wrap_content"


        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextRoom"
        android:layout_width="53dp"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/checkNet"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="RtlCompat" />

    <TextView
                android:id="@+id/ChooseIdentity"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:background="#FFCDD2"
                android:gravity="center"
                android:text="房屋資料"
                android:textColor="#000000"
                android:textSize="48dp" />

    <TextView
        android:id="@+id/firstName16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:text="*房屋格局:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/firstName18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:text="*房屋地址:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/spinnerRegion"
        android:layout_width="wrap_content"
        android:layout_height="45dp"

        android:layout_alignTop="@+id/spinnerCity"
        android:layout_centerHorizontal="true"
        android:entries="@array/Taipei" />



    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="wrap_content"
        android:layout_height="45dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstName18"
        android:entries="@array/city"
        android:layout_alignParentLeft="true" />


    <EditText
        android:id="@+id/editTextBalcony"
        android:layout_width="53dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextToilet"
        android:layout_width="53dp"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/spinnerRegion"
        android:layout_alignRight="@+id/spinnerRegion"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/editTextRoom"
        android:layout_toEndOf="@+id/editTextRoom"
        android:text="房"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/editTextRoom" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextRoom"
        android:layout_toEndOf="@+id/spinnerRegion"
        android:text="衛"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/spinnerRegion" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextLivingRoom"
        android:layout_alignParentEnd="true"
        android:text="陽台"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextRoom"
        android:layout_alignEnd="@+id/checkRefrig"
        android:text="廳"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignRight="@+id/checkRefrig" />

    <CheckBox
        android:id="@+id/checkTV"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkRefrig"
        android:layout_toStartOf="@+id/checkGas"
        android:text="電視"
        android:textSize="18dp"
        android:layout_toLeftOf="@+id/checkGas" />


    <Button
        android:id="@+id/NextStep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/lightgreencolorstyle"
        android:gravity="center"
        android:text="繼續填寫"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerRegion"
        android:ems="10"
        android:hint="Ex:師大路92巷3弄7號5樓"
        android:inputType="text|textPersonName"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseInfo.FillRentInfo5">


    <TextView
        android:id="@+id/firstName43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="395dp"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="385dp"
        android:hint="Ex:jerry123@gmail.com" />

    <TextView
        android:id="@+id/firstName37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:text="可聯絡時間:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AM"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="330dp"
        />

    <Spinner
        android:id="@+id/spinnerAM"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="330dp"
        android:entries="@array/day_time">

    </Spinner>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PM"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="330dp"
        />

    <Spinner
        android:id="@+id/spinnerPM"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="330dp"
        android:entries="@array/day_time">

    </Spinner>


    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="~"
        android:textSize="35dp"
        android:layout_marginTop="322dp"
        android:layout_marginLeft="245dp"
        android:textColor="#000000"

        />



    <TextView
        android:id="@+id/firstName26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="房屋照片:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/firstName35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:text="連絡電話:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="258dp"
        android:hint="Ex:0912345678" />

    <TextView
        android:id="@+id/firstName34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="聯絡人姓名:"
        android:layout_marginTop="200dp"
        android:textColor="#000000"
        android:textSize="25dp"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/editTextContact"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="190dp"

        android:hint="Ex:王小明" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="104dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonChoose"
        android:background="@drawable/blue"
        android:text="確定上傳"
        android:textSize="16dp" />


    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="104dp"
        android:layout_height="49dp"

        android:layout_marginTop="46dp"
        android:background="@drawable/blue"
        android:text="選擇圖片"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="112dp" />


    <Button
        android:id="@+id/FinishStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lightgreencolorstyle"
        android:gravity="center"
        android:text="完成填寫"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonUpload"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="圖片描述"
        android:inputType="text|textPersonName" />


</RelativeLayout>